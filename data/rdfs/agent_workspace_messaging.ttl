    rdfs:label "Desktop Notifications" .

zd:ChatRouting rdf:type zd:RoutingRule ;
    rdfs:label "Chat Routing" .

zd:Macros rdf:type zd:Feature ;
    rdfs:label "Macros Feature" .

zd:CallConsole rdf:type zd:Feature ;
    rdfs:label "Call Console" .

zd:RoutingRules rdf:type zd:Configuration ;
    rdfs:label "Routing Rules" .

zd:BusinessRules rdf:type zd:Configuration ;
    rdfs:label "Business Rules" .

zd:Triggers rdf:type zd:Configuration ;
    rdfs:label "Triggers" .

zd:MessagingChannels rdf:type zd:Feature ;
    rdfs:label "Messaging Channels" .

zd:OmnichannelRouting rdf:type zd:Feature ;
    rdfs:label "Omnichannel Routing" .

zd:Automation rdf:type zd:AutomationComponent ;
    rdfs:label "Automation" .

zd:CustomerProfile rdf:type zd:DataObject ;
    rdfs:label "Customer Profile" .

zd:ContactDetails rdf:type zd:DataObject ;
    rdfs:label "Contact Details" .

zd:KnowledgeBase rdf:type zd:DataObject ;
    rdfs:label "Knowledge Base" .

zd:CustomApps rdf:type zd:Feature ;
    rdfs:label "Custom Apps" .

zd:TicketChannel rdf:type zd:Condition ;
    rdfs:label "Ticket Channel Condition" .

zd:TicketStatus rdf:type zd:Condition ;
    rdfs:label "Ticket Status Condition" .

zd:AgentWorkload rdf:type zd:Metric ;
    rdfs:label "Agent Workload" .

zd:ResponseQuality rdf:type zd:Metric ;
    rdfs:label "Response Quality" .

zd:TicketProcessing rdf:type zd:Workflow ;
    rdfs:label "Ticket Processing" .

zd:TicketCreation rdf:type zd:Event ;
    rdfs:label "Ticket Creation" .

zd:RoutingConditions rdf:type zd:Condition ;
    rdfs:label "Routing Conditions" .

zd:AutomatedActions rdf:type zd:Action ;
    rdfs:label "Automated Actions" .

zd:AgentAcceptance rdf:type zd:Action ;
    rdfs:label "Agent Acceptance" .

zd:ConversationAssignment rdf:type zd:WorkflowElement ;
    rdfs:label "Conversation Assignment" .

zd:IncomingMessageAlert rdf:type zd:NotificationComponent ;
    rdfs:label "Incoming Message Alert" .
